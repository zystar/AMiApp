<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp">
        <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:src="@drawable/ic_launcher" />
        <ImageView
	        android:id="@+id/alv_iv_nation"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:src="@drawable/nation_img_en"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="姓名"
	        android:lineSpacingMultiplier="1.2"
	        android:textSize="15dp"
	        android:textColor="#32A5E7" />

	    <TextView
	        android:id="@+id/alv_tv_from_to"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="CN > EN"
	        android:lineSpacingMultiplier="1.2"
	        android:textSize="10dp"
	        android:textColor="#555555" />


	    <TextView
	        android:id="@+id/desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="描述"
		    android:lineSpacingMultiplier="1.2"
		    android:textSize="15dp" />

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:adjustViewBounds="true"
	        android:maxHeight="200dp"
	        android:scaleType="fitStart"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/defaultpic" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
	        android:padding="10dp">
			<TextView
				android:id="@+id/item_action_love"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/like"
				android:text="985赞"
				android:textColor="#888888"
				android:layout_marginTop="4dip"
				android:layout_marginBottom="4dip"
				android:layout_marginLeft="8dip"
				android:layout_marginRight="8dip"
				android:gravity="center"
				/>
			<ImageView
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
		        android:src="@drawable/separation_line"/>
			<TextView
				android:id="@+id/item_action_comment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:drawableLeft="@drawable/comment"
				android:gravity="center"
				android:text="评论"
				android:textColor="#888888"
				android:layout_marginTop="4dip"
				android:layout_marginBottom="4dip"
				android:layout_marginLeft="8dip"
				android:layout_marginRight="8dip"
				/>
	        <ImageView
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
		        android:src="@drawable/separation_line"/>
	        <ImageView
		        android:id="@+id/imageView6"
		        android:layout_width="40dp"
		        android:layout_height="15dp"
		        android:src="@drawable/collect"/>
	        <ImageView
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
		        android:src="@drawable/separation_line"/>
	        <ImageView
		        android:id="@+id/imageView7"
		        android:layout_width="40dp"
		        android:layout_height="wrap_content"
		        android:src="@drawable/more"/>

	    </LinearLayout>

    </LinearLayout>
</LinearLayout>